Ver en uqlx:

void FrameInt(void)
{
  if((intReg&8)!=0) /* controlla che sia abilitato */
    {
      theInt=8;
      intReg^=8;
      pendingInterrupt=2;
      *((uw8*)theROM+0x280a0l)=16;
      extraFlag=true;
      nInst2=nInst;
      nInst=0;
    }
}

